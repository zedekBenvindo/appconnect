{
  "expo": {
    "name": "meu_app_movel_rn",
    "slug": "meu_app_movel_rn",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "usesCleartextTraffic": true // Permite HTTP para desenvolvimento
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [ // Essencial para Expo Router
      "expo-router"
    ],
    "scheme": "myapp" // Esquema para deep linking com Expo Router
  }
}